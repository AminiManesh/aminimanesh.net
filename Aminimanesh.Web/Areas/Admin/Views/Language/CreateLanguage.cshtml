@using Aminimanesh.DataLayer.Entities.Owner
@model Language
@{
    ViewData["Title"] = "Add Language";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>
<p class="mb-4">
    Add an language to your resume.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-info">
        <h6 class="m-0 font-weight-bold text-white">Language Information</h6>
    </div>
    <div class="card-body">
        <form class="user" asp-area="Admin" asp-controller="Language" asp-action="CreateLanguage" method="post">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" data-bs-theme="dark" asp-validation-summary="All"></div>
            }

            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.Title"
                       placeholder="Language Title">
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" asp-for="@Model.Value"
                          placeholder="Your Level"></textarea>
            </div>
            <button type="submit" class="btn btn-success btn-user btn-block">
                Add Language
            </button>
        </form>
    </div>
</div>

