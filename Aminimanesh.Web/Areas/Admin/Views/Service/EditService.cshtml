@using Aminimanesh.Core.DTOs.ServiceDTOs
@model EditServiceDTO
@{
    ViewData["Title"] = "Edit Service";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>
<p class="mb-4">
    Edit this service for your resume.
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-info">
        <h6 class="m-0 font-weight-bold text-white">Service Information</h6>
    </div>
    <div class="card-body">
        <form class="user" asp-area="Admin" asp-controller="Service" asp-action="EditService" method="post">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" data-bs-theme="dark" asp-validation-summary="All"></div>
            }

            <input type="hidden" asp-for="@Model.ServiceId" />

            <div class="form-group">
                <input type="text" class="form-control" asp-for="@Model.Title" value="@Model.Title"
                       placeholder="Service Title">
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" asp-for="@Model.Description" value="@Model.Description"
                          placeholder="Description"></textarea>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <input type="number" class="form-control" asp-for="@Model.Priority" min="1" value="@Model.Priority"
                           placeholder="Priority">
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-user btn-block">
                Edit Service
            </button>
        </form>
    </div>
</div>

