@using Aminimanesh.Core.Convertors
@using Aminimanesh.DataLayer.Entities.Owner
@model List<Message>

<!-- Nav Item - Messages -->
<li class="nav-item dropdown no-arrow mx-1">
    <a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button"
       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-envelope fa-fw"></i>
        <!-- Counter - Messages -->
        <span class="badge badge-danger badge-counter">7</span>
    </a>
    <!-- Dropdown - Messages -->
    <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
         aria-labelledby="messagesDropdown">
        <h6 class="dropdown-header">
            Message Center
        </h6>
        @foreach (var msg in Model)
        {
            <a class="dropdown-item d-flex align-items-center" asp-area="Admin" asp-controller="Message" asp-action="Index">
                <div class="dropdown-list-image mr-3">
                    <img class="rounded-circle" src="/admin/img/undraw_profile.svg"
                         alt="...">
                    <div class="status-indicator bg-success"></div>
                </div>
                <div>
                    <div class="text-truncate">
                        @msg.Content
                    </div>
                    <div class="small text-gray-500">@msg.SenderName</div>
                    <div class="small text-gray-500">@msg.SendDate.Value.ToLongShamsi()</div>
                </div>
            </a>
        }
        <a class="dropdown-item text-center small text-gray-500" asp-area="Admin" asp-controller="Message" asp-action="Index">Read More Messages</a>
    </div>
</li>